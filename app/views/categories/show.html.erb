<%= provide(:title, @category.title) %>
<h1>
	<%= @category.title %>
</h1>
<p>
	<%= @category.description %>
</p>
<%= link_to "New Topic", forum_category_newtopic_path(category.forum.id,category.id), class: "btn btn-lg btn-primary" %>
<div class="center jumbotron">

<ul class="topics">
  <% @topics.each do |topic| %>
    <li>
  		<%= link_to topic.title, forum_category_topic_path(@forum.id,topic.category_id,topic.id) %>
	</li>
  <% end %>
</ul>

</div>