<% @news = News.last %>
<% if logged_in? %>
<div class="center jumbotron">
<h1>Welcome to the Magazine Student Website</h1>
<h2>
	<%= render @news %>
</h2>
<% if current_user.admin? %>
<%= link_to "Administrator space", admin_path, class: "btn btn-lg btn-primary" %>
<% end %>
<%= link_to "Forums", forums_path, class: "btn btn-lg btn-primary" %>
</div>
<% else %>
<div class="center jumbotron">
<h1>Welcome to the Magazine Student Website</h1>
<h2>
	<%= render @news %>
</h2>
<%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>