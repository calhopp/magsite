<li id="news-<%= news.id %>">   
  <% if current_user.admin? %>     
  	<%= link_to "delete", news_path(news.id), method: :delete,
                                  data: { confirm: "You sure?" } %></span>
  <% end %>
  <span class="content"><%= markdown(news.content) %></span>
  <span class="timestamp">
    posted <%= time_ago_in_words(news.created_at) %> ago.
  </span>
</li>